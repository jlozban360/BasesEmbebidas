CREATE TABLE IF NOT EXISTS DEPARTAMENTOS (
    DEPT_NO INTEGER PRIMARY KEY,
    DNOMBRE VARCHAR(15),
    LOC VARCHAR(15)
);

CREATE TABLE IF NOT EXISTS EMPLEADOS (
    EMP_NO INTEGER PRIMARY KEY,
    APELLIDO VARCHAR(10),
    OFICIO VARCHAR(10),
    DIR INTEGER,
    FECHA_ALT DATE,
    SALARIO DECIMAL(10,2),
    COMISION DECIMAL(10,2),
    DEPT_NO INTEGER,
    CONSTRAINT FK_DEPT FOREIGN KEY (DEPT_NO) REFERENCES DEPARTAMENTOS(DEPT_NO)
);

